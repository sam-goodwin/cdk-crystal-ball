{
  "files.exclude": {
    "**/__pycache__": true,
    ".pycache": true,
    ".ruff_cache": true
  },
  "editor.formatOnSave": true,
  "prettier.resolveGlobalModules": false,
  "editor.indentSize": 2,
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.indentSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.indentSize": 2
  }
}